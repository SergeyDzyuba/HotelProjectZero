%h1 New hotel
= simple_form_for :hotel do |f|
  %p
    = f.label :title
    %br
      = f.text_field :title
  %p
    = f.label :breakfast
    = f.input_field :breakfast, as: :boolean, boolean_style: :inline
  = f.label :description
  = f.text_area :text
  %p
    = f.label :photo
    = f.input :photo, as: :url
  %p
    = f.label :address
    = f.text_field :address
  %p
    = f.button :submit
